<!DOCTYPE html>
<html>
<head>
  <title>Space</title>
  <script src="/public/js/main.js"></script>
</head>
<body>
  <p><a href="/dashboard">Back to dashboard</a></p>
  <h1 id="spaceTitle">Space</h1>
  <h3>Items</h3>
  <ul id="itemsList"></ul>
  <form onsubmit="app.onCreateItem(event, '<%= spaceId %>')">
    <input id="itemContent" placeholder="Item content" required />
    <button type="submit">Add Item</button>
  </form>
  <script>
    const spaceId = '<%= spaceId %>';
    app.loadSpace(spaceId);
  </script>
</body>
</html>
